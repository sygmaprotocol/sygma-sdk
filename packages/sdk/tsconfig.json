{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"target": "ES2017",
		"outDir": "dist",
		"module": "commonjs",
		"baseUrl": "./src",
		"allowJs": true,
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"strict": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es2021",
			"dom"
		]
	},
	"include": [
		"src"
		// "integration"
	]
}