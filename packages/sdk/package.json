{
  "name": "@buildwithsygma/sygma-sdk-core",
  "version": "1.1.9",
  "description": "Core primitives for bridging and message passing",
  "main": "./dist-cjs/index.js",
  "module": "./dist-esm/index.js",
  "source": "./src/index.ts",
  "types": "./types/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist-esm/index.js",
      "require": "./dist-cjs/index.js",
      "types": "./types/src/index.d.ts"
    }
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sygmaprotocol/sygma-sdk"
  },
  "scripts": {
    "prepareNodes": "cd ./integration/node1 && npx hardhat node --port 8545 & cd ./integration/node2 && npx hardhat node --port 8547 &",
    "test": "jest --watchAll --detectOpenHandles --silent",
    "test:unit": "jest --detectOpenHandles",
    "test:fee": "jest --watchAll --testPathPattern=src/fee/__test__/",
    "test:substrate": "jest --watchAll --testPathPattern=src/chains/Substrate/__test__/",
    "test:evm": "jest --watchAll --testPathPattern=src/chains/EVM/__test__/",
    "run:all": "concurrently \"pnpm run prepareNodes\" \"pnpm run test\"",
    "build": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:all": "pnpm build:esm && pnpm build:cjs && pnpm build:types",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "pnpm run lint --fix",
    "run:nodes": "docker-compose -f docker-compose.yml up",
    "clean": "rm -rf ./dist* && rm -rf ./types && rm -rf ./coverage"
  },
  "keywords": [
    "sygma",
    "sygmaprotocol",
    "buildwithsygma",
    "web3",
    "bridge",
    "ethereum"
  ],
  "author": "Sygmaprotocol Product Team",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@polkadot/types": "^9.14.2",
    "@types/jest": "^29.4.0",
    "@types/node-fetch": "2.x",
    "concurrently": "7.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-only-warn": "1.0.3",
    "eslint-plugin-prettier": "4.0.0",
    "hardhat": "2.8.2",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "jest-extended": "1.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "@buildwithsygma/sygma-contracts": "1.0.0",
    "@polkadot/api": "^9.14.2",
    "@polkadot/api-augment": "^9.14.2",
    "@polkadot/extension-dapp": "^0.44.9",
    "@polkadot/keyring": "^10.4.2",
    "@polkadot/rpc-provider": "^9.14.2",
    "@polkadot/ui-keyring": "^2.12.1",
    "@polkadot/util": "^10.4.2",
    "@polkadot/util-crypto": "^10.4.2",
    "eth-crypto": "2.3.0",
    "ethers": "5.6.2",
    "node-fetch": "2.6.1",
    "react-hook-form": "^7.43.3"
  }
}
