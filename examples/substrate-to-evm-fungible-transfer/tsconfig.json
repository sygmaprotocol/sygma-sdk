{
	"compilerOptions": {
		"composite": true,
		"module": "ESNext",
		"allowJs": true,
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node"
	},
	"include": [
		"src"
	]
}