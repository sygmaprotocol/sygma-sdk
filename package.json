{
  "name": "@sygamprotocol/sygma-sdk",
  "version": "1.0.0",
  "description": "Sygma SDK",
  "main": "index.js",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/sygmaprotocol/sygma-sdk"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "sdk:build": "yarn wsrun -p @sygmaprotocol/sygma-sdk-core -c build",
    "sdk:cleanDist": "yarn wsrun -p @sygmaprotocol/sygma-sdk -c clean",
    "sdk:test": "yarn wsrun -p @sygmaprotocol/sygma-sdk -c test",
    "sdk:test:unit": "yarn wsrun -p @sygmaprotocol/sygma-sdk -c test:unit",
    "start:react-example": "yarn wsrun -p @sygmaprotocol/sygma-sdk-react-example -c start",
    "sdk:run-local-example": "yarn wsrun -p @sygmaprotocol/sygma-sdk-node-example -c run:local-ex",
    "sdk:run-ganache-example": "yarn wsrun -p @sygmaprotocol/sygma-sdk-node-example -c run:ganache-ex"
  },
  "keywords": [],
  "author": "Sygmaprotocol product team",
  "license": "LGPL",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/react-scripts"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1",
    "ethers": "5.4.5",
    "prettier": "2.1.2",
    "wsrun": "5.2.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
